#!/bin/bash

ARG_NO=$#
ARGS=$@
echo  arg no:$ARG_NO  args: $ARGS
ARGS_CMD=`echo $ARGS|sed "s/^**/ppp/g"`
echo rst  $ARGS_CMD
$ARGS
