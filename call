function fun_help()
{
    $1 -h
}
function fun_exec()
{
 	$1 $2
}
function fun_exec_withoutarg()
{
 	$1 
}
if [ $# -gt 1 ] && [ $2 = "-h" ]
then 	
 	fun_help $1
else
	fun_exec $1 $2
fi

